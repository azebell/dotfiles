
syntax on

" tab settings, never use spaces
set autoindent
set noexpandtab
set tabstop=4
set shiftwidth=4

" allow backspacing over indentions, newlines, insert start
set backspace=indent,eol,start

" show status bar
set laststatus=2
set ruler

" show a redline over col 80
set colorcolumn=80

" show line numbers
set number

" folding to syntax, no nesting, open by default
set foldmethod=syntax
set foldnestmax=1
set foldlevelstart=1

